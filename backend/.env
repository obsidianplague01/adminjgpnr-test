# Server
NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/jgpnr_db

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SENDER_NAME=JGPNR Paintball
SENDER_EMAIL=noreply@jgpnr.com

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# QR Code Encryption
QR_ENCRYPTION_KEY=your_32_byte_hex_key_here

# Local File Storage
PDF_DIR=./uploads/tickets
QR_CODE_DIR=./uploads/qrcodes
UPLOADS_DIR=./uploads

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Payment Integration
# Primary Payment Gateway: Paystack
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# Optional Payment Gateway: Flutterwave
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_flutterwave_secret_key
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your_flutterwave_public_key

BCRYPT_ROUNDS=14

# Payment Methods
# MANUAL - For cash/bank transfer payments
# PAYSTACK - Primary online payment (required)
# FLUTTERWAVE - Optional alternative online payment
ENABLED_PAYMENT_METHODS=MANUAL,PAYSTACK,FLUTTERWAVE

# Sentry (Optional)
SENTRY_DSN=your_sentry_dsn